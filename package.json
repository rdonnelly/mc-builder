{
  "name": "mc-builder",
  "version": "1.0.0",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "android": "yarn workspace @mc-builder/mobile android",
    "ios": "yarn workspace @mc-builder/mobile ios",
    "lint": "yarn workspaces run lint",
    "mobile": "yarn workspace @mc-builder/mobile start",
    "postinstall": "patch-package && yarn workspace @mc-builder/shared generateTypes",
    "ts": "yarn workspaces run ts",
    "web": "yarn workspace @mc-builder/web dev"
  },
  "dependencies": {
    "lodash": "^4.17.15",
    "marvelsdb-json-data": "https://github.com/rdonnelly/marvelsdb-json-data.git#main",
    "memoize-one": "^6.0.0",
    "nanoid": "^4.0.0"
  },
  "devDependencies": {
    "@react-native-community/eslint-config": "^3.1.0",
    "@types/lodash": "^4.14.186",
    "@types/node": "^17.0.10",
    "@typescript-eslint/eslint-plugin": "^5.40.0",
    "@typescript-eslint/parser": "^5.40.0",
    "eslint": "^8.25.0",
    "eslint-import-resolver-babel-module": "^5.2.0",
    "eslint-plugin-flowtype": "8.0.3",
    "eslint-plugin-simple-import-sort": "^8.0.0",
    "patch-package": "^6.2.2",
    "postinstall-postinstall": "^2.1.0",
    "prettier": "^2.7.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  }
}
