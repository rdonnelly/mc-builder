{
  "name": "mc-builder",
  "version": "1.0.0",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "build:android": "yarn workspace @mc-builder/mobile build:android",
    "build:ios": "yarn workspace @mc-builder/mobile build:ios",
    "build:web": "yarn workspace @mc-builder/web build",
    "build:clean": "yarn workspace @mc-builder/mobile build:clean",
    "dev:android": "yarn workspace @mc-builder/mobile dev:android",
    "dev:ios": "yarn workspace @mc-builder/mobile dev:ios",
    "dev:web": "yarn workspace @mc-builder/web dev",
    "serve:web": "yarn workspace @mc-builder/web start",
    "serve:mobile": "yarn workspace @mc-builder/mobile start",
    "lint": "yarn workspaces run lint",
    "postinstall": "patch-package && yarn workspace @mc-builder/shared generateTypes",
    "ts": "yarn workspaces run ts"
  },
  "dependencies": {
    "js-base64": "^3.7.0",
    "lodash": "^4.17.15",
    "marvelsdb-json-data": "https://github.com/rdonnelly/marvelsdb-json-data.git#main",
    "memoize-one": "^6.0.0",
    "nanoid": "^4.0.0",
    "yaqrcode": "^0.2.1"
  },
  "devDependencies": {
    "@react-native-community/eslint-config": "^3.2.0",
    "@rnx-kit/dep-check": "^1.14.0",
    "@types/lodash": "^4.14.189",
    "@types/node": "^16.0.0",
    "@typescript-eslint/eslint-plugin": "^5.43.0",
    "@typescript-eslint/parser": "^5.43.0",
    "eslint": "^8.27.0",
    "eslint-import-resolver-babel-module": "^5.2.0",
    "eslint-plugin-flowtype": "8.0.3",
    "eslint-plugin-simple-import-sort": "^8.0.0",
    "patch-package": "^6.5.0",
    "postinstall-postinstall": "^2.1.0",
    "prettier": "^2.7.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.3"
  },
  "resolutions": {
    "@babel/core": "^7.20.2",
    "@types/react": "^18.0.0",
    "satori": "^0.1.2"
  }
}
